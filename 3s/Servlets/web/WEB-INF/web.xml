<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>profile</servlet-name>
        <servlet-class>ProfileServlet</servlet-class>
    </servlet>
    <servlet-mapping>
    <servlet-name>profile</servlet-name>
    <url-pattern>/profile</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>profileWithFriends</servlet-name>
        <servlet-class>ProfileAndFriendsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>profileWithFriends</servlet-name>
        <url-pattern>/show_friends</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Friends</servlet-name>
        <servlet-class>FriendsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Friends</servlet-name>
        <url-pattern>/friends</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Receiver</servlet-name>
        <servlet-class>ReceiverServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Receiver</servlet-name>
        <url-pattern>/im</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Sender</servlet-name>
        <servlet-class>SenderServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Sender</servlet-name>
        <url-pattern>/om</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Message</servlet-name>
        <servlet-class>MessageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Message</servlet-name>
        <url-pattern>/messages</url-pattern>
    </servlet-mapping>

</web-app>