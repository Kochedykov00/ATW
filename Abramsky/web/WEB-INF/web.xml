<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>list</servlet-name>
        <servlet-class>servlets.StudentListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>new</servlet-name>
        <servlet-class>servlets.NewServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>list</servlet-name>
        <url-pattern>/list</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>new</servlet-name>
        <url-pattern>/new</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>searchPage</servlet-name>
        <servlet-class>servlets.SearchPageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>searchPage</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>loginPage</servlet-name>
        <servlet-class>servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>loginPage</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>BlogPage</servlet-name>
        <servlet-class>servlets.MyBlogServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BlogPage</servlet-name>
        <url-pattern>/blog</url-pattern>
    </servlet-mapping>


    <servlet>
    <servlet-name>registerPage</servlet-name>
    <servlet-class>servlets.RegisterServlet</servlet-class>
</servlet>
    <servlet-mapping>
        <servlet-name>registerPage</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>profilePage</servlet-name>
        <servlet-class>servlets.ProfileServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>profilePage</servlet-name>
        <url-pattern>/profile</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ArticlesPage</servlet-name>
        <servlet-class>servlets.MainServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ArticlesPage</servlet-name>
        <url-pattern>/main</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CreateBlogPage</servlet-name>
        <servlet-class>servlets.CreateBlogServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateBlogPage</servlet-name>
        <url-pattern>/create_blog</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CreateDiscussionPage</servlet-name>
        <servlet-class>servlets.CreateDiscussionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateDiscussionPage</servlet-name>
        <url-pattern>/create_discussion</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DiscussionPage</servlet-name>
        <servlet-class>servlets.ListOfDiscussionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DiscussionPage</servlet-name>
        <url-pattern>/discussions</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>MyProfilePage</servlet-name>
        <servlet-class>servlets.MyProfileServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MyProfilePage</servlet-name>
        <url-pattern>/myProfile</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ArticlePage</servlet-name>
        <servlet-class>servlets.PageArticleServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ArticlePage</servlet-name>
        <url-pattern>/article</url-pattern>
    </servlet-mapping>


    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.js</url-pattern>
        <url-pattern>*.jpg</url-pattern>
    </servlet-mapping>



</web-app>
